
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<br />

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Appointment List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Appointments" class="btn btn-info form-control text-white">
            Add New Appointment
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Priority</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/appointment.js"></script>
}


